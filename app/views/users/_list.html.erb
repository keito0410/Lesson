<div class="body">
  <div class="container">
  	<div class="row">
      <div class="col-xs-3">
      	<h2>User info</h2>
      	<table class="table">
          <%= attachment_image_tag @user, :profile_image, size: "100x100" %>
      		<tbody>
      			<tr>
      				<th>name</th>
      				<th><%= @user.name %></th>
      			</tr>
      			<tr>
      				<th>introduction</th>
      				<th><%= @user.introduction %></th>
      			</tr>
      		</tbody>
      	</table>
        <%= link_to edit_user_path(@user) do %>
        <div><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></div>
        <% end %>
      <h2>New book</h2>
<%= form_for (book) do |f| %>
<label>title</label>
<p><%= f.text_field :title %></p>
<div>
<label>Opinion</label>
<p><%= f.text_area :body %></p>
</div>
<%= f.submit "Create Book" %>
<% end %>
</div>